<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@id/subCategorySmartTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/app_theme_1"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@color/tab_text_color"
        app:stl_defaultTabTextHorizontalPadding="@dimen/margin_medium"
        app:stl_defaultTabTextSize="@dimen/font_size_edittext"
        app:stl_indicatorColor="@color/white"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="@dimen/margin_tiny"
        app:stl_titleOffset="auto_center"
        app:stl_underlineThickness="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/suCategoryViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/subCategorySmartTabLayout" />

</RelativeLayout>
